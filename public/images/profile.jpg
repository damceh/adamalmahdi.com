<svg width="400" height="400" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="profileGradient" cx="50%" cy="30%" r="70%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#4ecdc4;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#45b7d1;stop-opacity:0.4" />
    </radialGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="400" fill="#1a1a1a"/>
  
  <!-- Glow effect -->
  <circle cx="200" cy="200" r="180" fill="url(#profileGradient)" filter="url(#glow)" opacity="0.3"/>
  
  <!-- Main profile circle -->
  <circle cx="200" cy="200" r="150" fill="#2a2a2a" stroke="#ff6b6b" stroke-width="3"/>
  
  <!-- Profile silhouette -->
  <g transform="translate(200,200)">
    <!-- Head -->
    <circle cx="0" cy="-30" r="40" fill="#666666"/>
    
    <!-- Body -->
    <ellipse cx="0" cy="30" rx="60" ry="80" fill="#666666"/>
    
    <!-- Shoulders -->
    <ellipse cx="0" cy="90" rx="80" ry="30" fill="#666666"/>
  </g>
  
  <!-- Decorative elements -->
  <circle cx="80" cy="80" r="3" fill="#4ecdc4" opacity="0.8">
    <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="320" cy="120" r="2" fill="#ff6b6b" opacity="0.6">
    <animate attributeName="opacity" values="0.6;0.2;0.6" dur="3s" repeatCount="indefinite"/>
  </circle>
  <circle cx="100" cy="320" r="2.5" fill="#45b7d1" opacity="0.7">
    <animate attributeName="opacity" values="0.7;0.3;0.7" dur="2.5s" repeatCount="indefinite"/>
  </circle>
  
  <!-- Text overlay -->
  <text x="200" y="350" text-anchor="middle" fill="#b3b3b3" font-family="Arial, sans-serif" font-size="16" font-weight="bold">
    Adam Almahdi
  </text>
</svg>