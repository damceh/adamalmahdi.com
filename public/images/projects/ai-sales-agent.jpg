<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="aiGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#4ecdc4;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#45b7d1;stop-opacity:0.8" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="600" height="400" fill="#0a0a0a"/>
  
  <!-- Grid pattern -->
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#333" stroke-width="1" opacity="0.3"/>
    </pattern>
  </defs>
  <rect width="600" height="400" fill="url(#grid)"/>
  
  <!-- Central AI brain -->
  <circle cx="300" cy="200" r="80" fill="none" stroke="url(#aiGradient)" stroke-width="3" filter="url(#glow)"/>
  <circle cx="300" cy="200" r="60" fill="none" stroke="#4ecdc4" stroke-width="2" opacity="0.6"/>
  <circle cx="300" cy="200" r="40" fill="none" stroke="#ff6b6b" stroke-width="2" opacity="0.8"/>
  
  <!-- Neural network nodes -->
  <circle cx="200" cy="120" r="8" fill="#4ecdc4" opacity="0.8"/>
  <circle cx="400" cy="120" r="8" fill="#ff6b6b" opacity="0.8"/>
  <circle cx="150" cy="200" r="8" fill="#45b7d1" opacity="0.8"/>
  <circle cx="450" cy="200" r="8" fill="#96ceb4" opacity="0.8"/>
  <circle cx="200" cy="280" r="8" fill="#ff6b6b" opacity="0.8"/>
  <circle cx="400" cy="280" r="8" fill="#4ecdc4" opacity="0.8"/>
  
  <!-- Connecting lines -->
  <line x1="200" y1="120" x2="300" y2="200" stroke="#4ecdc4" stroke-width="2" opacity="0.4"/>
  <line x1="400" y1="120" x2="300" y2="200" stroke="#ff6b6b" stroke-width="2" opacity="0.4"/>
  <line x1="150" y1="200" x2="300" y2="200" stroke="#45b7d1" stroke-width="2" opacity="0.4"/>
  <line x1="450" y1="200" x2="300" y2="200" stroke="#96ceb4" stroke-width="2" opacity="0.4"/>
  <line x1="200" y1="280" x2="300" y2="200" stroke="#ff6b6b" stroke-width="2" opacity="0.4"/>
  <line x1="400" y1="280" x2="300" y2="200" stroke="#4ecdc4" stroke-width="2" opacity="0.4"/>
  
  <!-- Data flow particles -->
  <circle cx="250" cy="160" r="3" fill="#4ecdc4">
    <animateMotion dur="3s" repeatCount="indefinite">
      <path d="M 0,0 Q 50,-20 100,0"/>
    </animateMotion>
  </circle>
  
  <!-- Title -->
  <text x="300" y="350" text-anchor="middle" fill="#ffffff" font-family="Arial, sans-serif" font-size="24" font-weight="bold">
    AI Sales Agent Platform
  </text>
  <text x="300" y="375" text-anchor="middle" fill="#b3b3b3" font-family="Arial, sans-serif" font-size="14">
    Intelligent automation • Lead qualification • Natural language processing
  </text>
</svg>